{
    "packages": {
        "crates/lakekeeper": {
            "release-type": "rust",
            "component": "lakekeeper"
        },
        "crates/lakekeeper-bin": {
            "release-type": "rust",
            "component": "lakekeeper-bin"
        },
        "crates/iceberg-ext": {
            "release-type": "rust",
            "component": "iceberg-ext"
        },
        "crates/authz-openfga": {
            "release-type": "rust",
            "component": "lakekeeper-authz-openfga"
        }
    },
    "plugins": [
        {
            "type": "cargo-workspace",
            "merge": false
        },
        {
            "type": "linked-versions",
            "groupName": "lakekeeper",
            "components": [
                "lakekeeper",
                "lakekeeper-bin",
                "iceberg-ext",
                "lakekeeper-authz-openfga"
            ]
        }
    ],
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": false,
    "include-component-in-tag": false,
    "extra-files": [
        {
            "type": "yaml",
            "path": "docs/docs/api/management-open-api.yaml",
            "jsonpath": "$.info.version"
        }
    ],
    "changelog-sections": [
        {
          "type": "feat",
          "hidden": false,
          "section": "Features"
        },
        {
          "type": "fix",
          "hidden": false,
          "section": "Bug Fixes"
        },
        {
          "type": "docs",
          "hidden": false,
          "section": "Documentation"
        },
        {
          "type": "chore",
          "hidden": false,
          "section": "Miscellaneous Chores"
        }
    ],
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}